@{
    ViewData["Title"] = "Movie Submission";
}

@model DateMe.Models.MovieSubmission 

<h3>Enter a movie here bruh</h3>

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label asp-for="Title">Movie Title:</label>
        <input asp-for="Title" required="required" /> <br />

        <label asp-for="Year">Year Released:</label>
        <input asp-for="Year" required="required" /> <br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" required="required" /> <br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select> <br />

        <label asp-for="CategoryID">Movie Genre:</label>
        <select asp-for="CategoryID">
            <option value="">Select a Genre</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select> <br />

        <label asp-for="Edited">Edited?:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select> <br />

        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" /> <br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" maxlength="25" /> <br />

        <button type="submit">Enter Movie</button>
        <input type="hidden" asp-for="MovieID" />
    </form>
</div>