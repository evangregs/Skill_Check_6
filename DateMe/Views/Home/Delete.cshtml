@{
    ViewData["Title"] = "Delete Movie";
}

@model MovieSubmission

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.Title directed by @Model.Director?</h3>

<form method="post" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MovieBank" class="btn btn-outline-primary">Cancel</a>

    <input type="hidden" asp-for="MovieID"/>
</form>
